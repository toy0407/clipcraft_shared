{
  "name": "@toy0407/clipcraft-shared",
  "version": "0.3.2",
  "description": "Shared files for all microservices",
  "main": "dist/index.js",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/toy0407/clipcraft_shared.git"
  },
  "files": [
    "dist",
    "prisma-client"
  ],
  "scripts": {
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:push:dev": "prisma db push --schema=./prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema=./prisma/schema.prisma --name init",
    "prisma:migrate:prod": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "prisma:status": "prisma migrate status --schema=./prisma/schema.prisma",
    "dev": "npx tsx src/index.ts",
    "test": "jest",
    "build": "rm -rf dist && tsc && cp -R src/prisma-client dist/prisma-client || true",
    "prepublish": "npm run prisma:generate && npm run build",
    "release:patch": "npm version patch --no-git-tag-version && npm publish",
    "release:minor": "npm version minor --no-git-tag-version && npm publish",
    "release:major": "npm version major --no-git-tag-version && npm publish"
  },
  "author": "AscentDevs",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "jest": "^29.7.0",
    "prisma": "^6.19.0",
    "typescript": "^5.9.3"
  }
}
